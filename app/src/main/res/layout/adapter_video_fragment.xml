<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp">

   <ImageView
       android:id="@+id/videoPic"
       android:layout_width="145dp"
       android:layout_height="145dp"
       android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/videoPic" />

    <TextView
        android:id="@+id/tv_fragment_auth"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="18sp"
        android:layout_toEndOf="@id/videoPic"
        android:layout_below="@id/tv_fragment_title"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_fragment_description"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/videoPic"
        android:layout_below="@id/tv_fragment_auth"/>

</RelativeLayout>